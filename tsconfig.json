{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "./dist",
		"sourceMap": false,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,

		"moduleResolution": "Bundler",
		"module": "esnext",
		"target": "esnext",
		"lib": ["ESNext"],
		"checkJs": true,
		"types": ["@girs/gjs", "@girs/gnome-shell"]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*",
		"ambient.d.ts",
	],
}
